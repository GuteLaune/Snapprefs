<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="settings_section_header" parent="@android:attr/listSeparatorTextViewStyle">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/default_gap</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/aa_blank</item>
        <item name="android:windowBackground">@color/white</item>
    	<item name="android:listViewStyle">@style/listViewPrefs</item> 
    	<item name="android:listSeparatorTextViewStyle">@style/settings_section_header</item>
    	<item name="android:textColorPrimary">@color/black</item>
    	<item name="android:textColorSecondary">#ff808080</item>
    </style>
    <style name="TopPanel">
        <item name="android:background">@color/green</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="settings_checkbox">
        <item name="android:background">@drawable/settings_button_selector</item>
        <item name="android:layout_width">@dimen/checkbox_size</item>
        <item name="android:layout_height">@dimen/checkbox_size</item>
        <item name="android:layout_marginRight">@dimen/default_gap_half</item>
        <item name="android:checked">true</item>
        <item name="android:button">@null</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    
<style name="listViewPrefs" parent="@android:style/Widget.ListView">
    <item name="android:background">@drawable/aa_blank</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">?android:listPreferredItemHeight</item>
    <item name="android:textSize">30.0sp</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:textStyle">bold</item>
    <item name="android:cacheColorHint">@color/white</item>
    <item name="android:listSelector">@drawable/aa_blank</item>
    <item name="android:divider">@color/divider_grey</item>
    <item name="android:headerDividersEnabled">true</item>
</style>

</resources>
